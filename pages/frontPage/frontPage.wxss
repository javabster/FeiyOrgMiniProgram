/* pages/frontPage/frontPage.wxss */
.view {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 500px;
}

.textbox {
  text-align:center;
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 120px;
  padding-right: 5px;
}

.feiyButton {
   /* border-radius: 100%;  */
  width: 70%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
   /* background-color: #37D7D4;  */
  background-color: white;
  color: white;
  padding: 0;
  border-width: 0;
  animation-name: buttonAnimation;
  animation-duration: 2.5s;
  animation-iteration-count: infinite;
}

.logo {
  height: 100%;
  width: 100%;
}

@keyframes buttonAnimation {
  0% {width: 70%; height: 50%}
   50% {width: 80%; height: 60%} 
  100% {width: 70%; height: 50%}
} 